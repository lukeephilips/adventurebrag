<%= link_to "back", places_path %>
<div class="row">
  <div class="col s6">
    <h1><%= @place.name %></h1>
    <h3><%= @place.region %></h3>
    <p><%= @place.description %></p>
  </div>
  <div class="col s6">
    <%= image_tag @place.image, class: 'responsive-img' %>
  </div>
</div>
<div class="row">
  <h2>Adventures</h2>
  <%= link_to "Add an adventure", new_place_adventure_path(@place) if can? :create, Adventure%>
  <% @place.adventures.each do |adventure| %>
    <div class="card">
      <h5><%= adventure.name %></h5>
      <p>Length: <%= adventure.days %> days</p>
      <p><%= adventure.description %></p>
      <p>Submitted by: <%= adventure.user.email %></p>
      <div class="car-action">
        <p><%= link_to "Delete", place_adventure_path(@place, adventure), :method => 'delete' if can? :destroy, Adventure %></p>
      </div>
    </div>
  <% end %>
</div>

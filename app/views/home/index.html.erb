<div class="row">
  <div class="col s8 offset-s2">
    <% if Place.any? %>
      <div class="carousel carousel-slider center" data-indicators="true">
        <% Place.first(5).each do |place| %>
          <%= link_to image_tag(place.image, class: 'carousel-item'), place_path(place) %>
        <% end %>
      </div>
    <% end %>
    <div class="card-panel intro">
      <h5>AdventureBrags is a site to brag about the adventures you go on. Login to contribute, or click a place to view. </h5>
      <p>Select an image from the carosel to get started, visit a <%= link_to "random place", place_path(Place.all.sample) %>.<p>
      </div>
  </div>
</div>
